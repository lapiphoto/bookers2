<div class=container>
  <div class=row>

<div class="col-xs-3">

  <h1>User info</h1>

  <%= attachment_image_tag @user,:profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpeg" %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <td><%=@user.name %></td>
      </tr>
      <tr>
        <th>introduction</th>
        <td><%= @user.introduction %></td>
      </tr>
    </tbody>
  </table>
<%= link_to edit_user_path(@user),  class: "btn btn-default btn-block" do %>
  <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
<% end %>

<h1>New book</h1>
<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <div class="form-group">
  <%= f.text_field :title, class:"form-control" %>
</div>
  <h4>Opinion</h4>
  <div class="form-group">
  <%= f.text_area :body, class:"form-control" %>
</div>
  <%= f.submit 'Create Book', class: "btn btn-primary btn-block" %>
<% end %>
</div>

<div class="col-xs-9">

<h1>Books</h1>


<table class="table">
  <thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  </thead>
  <tbody>

　　<% @books.each do |book| %>
  <tr>
    <td><%= attachment_image_tag @user,:profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpeg", size:'40x40' %></td>
    <td><%= link_to book.title , book_path(book) %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</tbody>
</table>
</div>
</div>
</div>